    {
      "name": "Debug GraphQL Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceRoot}/packages/graphql/src/index.ts",
      "remoteRoot": "${workspaceRoot}/packages/graphql/build/index.js",
      "cwd": "${workspaceRoot}/packages/graphql"
    }
  ]
}