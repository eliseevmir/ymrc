    {
      "name": "WebAdmin Launch and Debug",
      "type": "chrome",
      "request": "launch",
      "port": 9228,
      "webRoot": "${workspaceFolder}/packages/admin",
      "sourceMaps": true,
      "url": "http://localhost:9000",
      "sourceMapPathOverrides": {
        "webpack://@boilerplate/admin/*": "${webRoot}/*",
      },
    },
